@model MenuViewModel
<h1>Ecco i dettagli del Menu @Model.Name</h1>

<p>I Piatti facenti parte di questo Menu</p>

<table class="table table-hover table-bordered table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Descrizione</th>
            <th>Tipologia</th>
            <th>Prezzo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Piatti)
        {
             decimal prezzoTot = 0;
        
            <tr>
                <td>@item.Nome</td>
                <td>@item.Descrizione</td>
                <td>@item.Tipologia</td>
                <td>@item.Prezzo</td>

                
                

              @*  <th>
                    <a asp-controller="Piatti" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Visualizza Dettagli</a>
                </th>*@
            </tr>
            prezzoTot += @item.Prezzo;
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Prezzo Totale</th>
            @*<th>@prezzo</th>*@
            <th></th>
        </tr>
    </tfoot>
</table>