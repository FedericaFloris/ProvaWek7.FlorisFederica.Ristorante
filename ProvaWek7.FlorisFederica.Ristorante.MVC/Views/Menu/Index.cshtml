@model ICollection<MenuViewModel>
<h1>Ecco tutti i Menu disponibili</h1>
@if (User.IsInRole("Ristoratore"))
{
   <a type=button class="btn btn-primary" asp-controller="Menu" asp-action="Create">Inserisci nuovo menu</a> 
}

<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            
            <th>Nome</th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                
                <td>@item.Name</td>
                @*<td>@item.Descrizione</td>*@
                <td> 
                   @* pulsante "Visualizza Dettagli"*@
                   <a asp-controller="Menu" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Visualizza dettagli</a>
                   @if (User.IsInRole("Administrator"))
                    {
                        <a asp-controller="Menu" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Aggiorna</a>
                        
                    } 
                </td>
            </tr>
        }
    </tbody>

</table>
